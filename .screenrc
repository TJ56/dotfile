################
# keybindings

# remove some key bindings
bind .
bind ^\
bind \\
bind ' '
bind ^a

# change escape key to `
escape ``

# define Ctrl+ left/right arrow to change between screens
termcapinfo xterm "ks=\E[?1l\E=:ku=\E[A:kd=\E[B:kl=\E[D:kr=\E[C:kh=\E[5~:kH=\E[F"

# putty bindings
bindkey "^[OC" next
bindkey "^[OD" prev

bindkey "^[[1;5C" next
bindkey "^[[1;5D" prev

# bind F7  to detach screen session from this terminal
# bind F8 to kill current screen window.
# bind F9 to create a new screen
# bind F10 to rename current screen window
# bind F11 to move to previous window
# bind F12 to move to next window
#
# conflict with vimgdb
#bindkey -k k7 detach
bindkey -k k8 kill
bindkey -k k9 screen
#bindkey -k k; title
bindkey -k k;
bindkey -k F1 prev
bindkey -k F2 next
#encoding Big5
#defencoding Big5

term xterm
utf8 on          # display encoding = utf8
defencoding utf8 # internal encoding = utf8
